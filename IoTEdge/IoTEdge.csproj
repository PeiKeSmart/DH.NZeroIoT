<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyTitle>物联网网关</AssemblyTitle>
    <Description>IoT边缘网关</Description>
    <Company>湖北登灏科技有限公司</Company>
    <Copyright>©2020-2024 湖北登灏科技有限公司</Copyright>
    <VersionPrefix>2.0</VersionPrefix>
    <VersionSuffix>$([System.DateTime]::Now.ToString(`yyyy.MMdd`))</VersionSuffix>
    <Version>$(VersionPrefix).$(VersionSuffix)</Version>
    <FileVersion>$(Version)</FileVersion>
    <AssemblyVersion>$(VersionPrefix).*</AssemblyVersion>
    <Deterministic>false</Deterministic>
    <OutputPath>..\Bin\IoTEdge</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DH.NBACnet" Version="3.7.2024.918-beta1016" />
    <PackageReference Include="DH.NModbus" Version="3.7.2024.920-beta0149" />
    <PackageReference Include="DH.NModbusRTU" Version="3.7.2024.920-beta0149" />
    <PackageReference Include="DH.NMQTT" Version="3.7.2024.920-beta0134" />
    <PackageReference Include="DH.NNetPing" Version="3.7.2024.920-beta0151" />
    <PackageReference Include="DH.NPC" Version="3.7.2024.920-beta0158" />
    <PackageReference Include="DH.NSchneider" Version="3.7.2024.920-beta0158" />
    <PackageReference Include="DH.NSiemens" Version="3.7.2024.920-beta0159" />
    <PackageReference Include="DH.NSmartA2" Version="1.1.2024.912-beta0152" />
    <PackageReference Include="DH.NSmartA4" Version="1.0.2024.918-beta1207" />
    <PackageReference Include="DH.NStardust" Version="3.7.2024.918-beta0838" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\IoTCore\IoTCore.csproj" />
  </ItemGroup>

</Project>
